# https://editorconfig.org/

root = true

[*]
charset = utf-8 ; no BOM
end_of_line = CRLF
indent_size = 4
insert_final_newline = true

[.*]
indent_style = tab
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = tab
trim_trailing_whitespace = false

[*.cs]
indent_style = tab

[*.sln]
indent_style = tab

[*.csproj]
indent_style = tab
